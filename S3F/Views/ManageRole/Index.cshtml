@model List<IdentityRole>
@{
    ViewData["Title"] = "فهرست";
}

<a asp-controller="ManageRole" asp-action="AddRole" class="btn btn-primary">جدید</a>

@if (!Model.Any())
{
    <h3>مقامی یافت نشد</h3>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-body">
                نقش : <b>@Model[i].Name</b>
            </div>
            <div class="card-footer">
                <form asp-controller="ManageRole" asp-action="DeleteRole" method="post" asp-route-id="@Model[i].Id">

                    <a asp-controller="ManageRole" asp-action="EditRole" asp-route-id="@Model[i].Id"
                       class="btn btn-primary">ویرایش</a>

                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
            </div>
        </div>
    }
}

